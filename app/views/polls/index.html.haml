%h1 Polls
= form_tag tag_polls_path, :method => :get do
  = search_field_tag :id
  = submit_tag :search

- polls.each do |poll|
  .div[poll]
    %h3= poll.title
    %p= poll.description.truncate(100)
    = link_to "Take part", poll_path(poll.id)
    - if poll.owned_by?(current_user)
      = link_to "View results", results_poll_path(poll.id)
      = link_to "Remove", poll_path(poll.id), :method => :delete
.tags_cloud
  - tag_cloud(tags, %w(css1 css2 css3 css4)) do |tag, css_class|
    = link_to tag.name, tag_polls_path(tag.name), :class => css_class
= link_to "Create a poll", new_poll_path