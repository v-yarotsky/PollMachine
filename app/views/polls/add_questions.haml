- content_for :javascripts do
  = javascript_include_tag "create_poll"
  
= nested_form_for poll, :html => { :id => "poll_questions" } do |f|
  %h2
    = "Questions"
    %span.errors= f.object.errors[:questions]
  %ol.questions
    = f.fields_for :questions
    = f.link_to_add "Add question", :questions
  = f.submit