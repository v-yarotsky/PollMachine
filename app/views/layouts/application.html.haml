!!!
%html
  %head>
    %title Poll Machine
    = stylesheet_link_tag :all, "general"
    = yield :stylesheets
    = javascript_include_tag :defaults, "nested_form"
    = yield :javascripts
    = csrf_meta_tag
  %body
    #user_nav
      - if user_signed_in?
        = "Hello, #{current_user.name}. Not you?"  
        = link_to "Sign out", destroy_user_session_path
      - else
        = link_to "Sign up", new_user_registration_path 
        or  
        = link_to "Sign in", new_user_session_path  
    #messages
      #notice= notice
      #alert= alert
    = yield

